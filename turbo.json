{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**", ".output/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "export": {
      "dependsOn": ["build"],
      "outputs": ["*.pdf"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    }
  }
}